# Don't cause the server to break if Passenger module not loaded
<IfModule passenger_module>
	<VirtualHost *:80>
	  ServerName test-kbpeer.uits.iu.edu
        ServerAlias assets0.iu.edu
        ServerAlias assets1.iu.edu
        ServerAlias assets2.iu.edu
        ServerAlias assets3.iu.edu

	  DocumentRoot "/opt/apps/kbpeer/current/public"
	  CustomLog /var/log/apache2/kbpeer-access.log combined
	  ErrorLog /var/log/apache2/kbpeer-error.log
	  
	  RailsEnv production
	  # RailsAllowModRewrite off
	  #
	  # Check for maintenance file and redirect all requests
	  RewriteEngine On
	  RewriteCond %{REQUEST_URI} !\.(css|jpg|png|gif)$
	  RewriteCond %{DOCUMENT_ROOT}/system/maintenance.html -f
	  RewriteCond %{SCRIPT_FILENAME} !maintenance.html
      RewriteRule ^.*$ /system/maintenance.html [L]
	  <Directory "/opt/apps/kbpeer/current/public">
	    Order allow,deny
	    Allow from all
	  </Directory>
	</VirtualHost>
</IfModule>

